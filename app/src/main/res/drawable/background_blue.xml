<?xml version="1.0" encoding="utf-8"?><!-- 全局通栏按钮背景样式 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><!---->
        <shape>
            <gradient
                android:angle="90"
                android:startColor="@color/mblue"
                android:endColor="@color/darkslategray"/>
            <stroke
                android:width="1px"
                android:color="@color/login_btn_select_border_50"/>
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="90"
                android:startColor="@color/dodgerblue"
                android:endColor="@color/aqua"/>
            <stroke
                android:width="1px"
                android:color="@color/white"/>
            <corners android:radius="8dp" />
        </shape>
    </item>

</selector>