<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.xhh.ysj.media.IjkVideoView
        android:id="@+id/free_ad_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.xhh.ysj.view.CircleTextProgressbar
        android:id="@+id/free_ad_progress_cpb"
        style="@style/free_ad_top_right_style"
        android:layout_width="75dp"
        android:layout_height="75dp"/>

    <com.xhh.ysj.view.TextProgressBar
        android:id="@+id/free_ad_progress_tpb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        custom:progress_current="50"
        style="@style/text_pb_style_default"/>

    <Button
        android:id="@+id/free_ad_quit_btn"
        style="@style/free_ad_top_right_style"
        android:background="@drawable/button_round_gray"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textSize="20sp"
